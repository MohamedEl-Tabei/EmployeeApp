@model Employee
@{
    string title = Model.EmployeeName == null ? "Create" : "Edit";
    ViewData["Title"] = title;
    string elementStyle = "col-md-6";
}
<form class="row w-75 m-auto g-3   pb-2">
    <h3 class="text-center m-auto shadow p-3 mb-2 rounded-3">@title Employee @Model.EmployeeNumber</h3>

    <div class=@elementStyle>
        <label asp-for=EmployeeName class="form-label">Name</label>
        <input asp-for=EmployeeName class="form-control">
    </div>
    <div class=@elementStyle>
        <label asp-for=DateOfBirth class="form-label">Date of birth</label>
        <input asp-for=DateOfBirth class="form-control">
    </div>
    <div class=@elementStyle>
        <label asp-for=DepartmentId class="form-label">Department</label>
        <select asp-for="DepartmentId" class="form-select">
            <option disabled selected value=@null />

            @foreach (var department in ViewBag.Departments)
            {
                <option value=@department.DepartmentId>@department.DepartmentName</option>
            }
        </select>
    </div>
    <div class=@elementStyle>
        <label asp-for=DateOfJoining class="form-label">Date of joining</label>
        <input asp-for=DateOfJoining class="form-control">
    </div>
    <div class=@elementStyle>
        <label asp-for=EmployeeGrossSalary class="form-label">Groos salary</label>
        <input type="number" asp-for=EmployeeNetSalary class="form-control">
    </div>
    <div class=@elementStyle>
        <label asp-for=EmployeeNetSalary class="form-label">Net salary</label>
        <input type="number" asp-for=EmployeeNetSalary class="form-control">
    </div>
    <div class=@elementStyle>
        <div class="mt-5 d-flex justify-content-between">
            <button class="btn w-50 btn-success me-2">Save</button>
            <button class="btn w-50 btn-secondary">Cancle</button>
        </div>

    </div>

</form>